<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
<mapper namespace="com.example.project_team.mappers.BoardMapper">
	<!-- boardList -->
	<select id="boardList" resultType="com.example.project_team.dto.BoardDTO">
		SELECT * FROM team_board ORDER BY num
	</select>
	
	<!-- insertBoard -->
	<insert id="insertBoard" parameterType="com.example.project_team.dto.BoardDTO">
		INSERT INTO team_board
			VALUES((SELECT NVL(MAX(num)+1,1) FROM team_board), #{title}, #{content})
	</insert>
	
	<!-- findByNum / 1건 조회 -->
	<select id="findByNum" parameterType="int" resultType="com.example.project_team.dto.BoardDTO">
		SELECT * FROM team_board WHERE num = #{num}
	</select>
	
	<!-- updateBoard -->
	<update id="updateBoard" parameterType="com.example.project_team.dto.BoardDTO">
		UPDATE team_board
			SET title=#{title}, content=#{content} WHERE num=#{num}
	</update>
	
	<!-- deleteByNum -->
	<delete id="deleteByNum" parameterType="int">
		DELETE FROM team_board WHERE num=#{num}
	</delete>
</mapper>